<UserControl x:Class="UI.CustomControls.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="100">
    <StackPanel Orientation="Horizontal">
        <TextBox x:Name="numericValueTextBox" Width="50"/>
        <Button Click="ButtonUpValue_Click" Content="^"/>
        <Button Click="ButtonDownValue_Click" Content="V"/>
    </StackPanel>
</UserControl>
 