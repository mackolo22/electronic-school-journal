        <TextBlock Grid.Row="0" Text="Plan lekcji" HorizontalAlignment="Center" FontSize="40" Margin="15"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="100" Width="Auto"/>
                <ColumnDefinition MinWidth="100" Width="Auto"/>
                <ColumnDefinition MinWidth="100" Width="Auto"/>
                <ColumnDefinition MinWidth="100" Width="Auto"/>
                <ColumnDefinition MinWidth="100" Width="Auto"/>
